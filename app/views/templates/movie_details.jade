- console.log(runningTasks)
.moviedetails
  img.poster(src=posterUri)
  .movieabout
    h2=label

    .characteristics
      b
        if genre
          = genre.label
          |&ensp;|&ensp;
        if publicationDate
          =publicationDate.slice(0, 4)
          |&ensp;|&ensp;
        if countryOfOrigin
          =countryOfOrigin.label
          |&ensp;|&ensp;
        if duration
          | durée :&#x0020;
          =duration
          | min
          |&ensp;|&ensp;
        //- VM HD ... ?
        if director
          | Réalisé par&nbsp;
          = director.label

      if viewed
        |&ensp;— Vu le&nbsp;
        - var last = viewed[viewed.length - 1].timestamp
        = moment(last).format('DD/MM/YYYY')

      | &ensp;—
      if !id
        button#save  ➕ Ajouter à la bibliothèque
      else
        button.delete ❌ Supprimer de la bibliothèque



    .synopsis!= synopsis

hr
.soundtrack
  h3 Musique associée
    if runningTasks.fetch_deezerIds || runningTasks.fetch_soundtrack
      .waitmessage
        if runningTasks.fetch_deezerIds
          span Recherche des pistes sur Deezer

        if runningTasks.fetch_soundtrack
          span Recherche de la bande originale sur Musicbrainz

        img(src='img/ajax-loader-black.gif')

  .album
    if !runningTasks.fetch_soundtrack
      .emptymessage La bande originale n'a pas été trouvée sur Musicbrainz.

  .player

.close
