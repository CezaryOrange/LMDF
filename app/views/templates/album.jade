mixin displayTrack(track, idx)
  li.track
    //- span.number= idx + 1
    //- | &nbsp;
    span.title= track.title
    | &emsp;par&nbsp;
    span.artist= track.artist
    | &nbsp;
    span.length= moment.utc(track.length).format('mm:ss')
    | &nbsp;

    if track.deezerId
      button.play(data-deezerid=track.deezerId) ▶&nbsp;
        span.listendeezer écouter via Deezer

.albuminfo
  h3.title= title
    | &ensp;
    span.artist par&nbsp;
      = artist
    if hasDeezerIds
      | &emsp;
      button.play ▶&nbsp;
        span.listendeezer écouter via Deezer

ol.tracks
  each track, idx in tracks
    +displayTrack(track, idx)
